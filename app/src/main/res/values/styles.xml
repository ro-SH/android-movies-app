<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/helvetica_bold</item>
    </style>

    <style name="overview_title">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="overview_score">
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface_color</item>
    </style>

    <style name="overview_text">
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="movie_essential">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/helvetica_light</item>
    </style>

    <style name="movie_secondary">
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>